block head
  link(rel="stylesheet", href="css/form.css")

div(class="row")
  div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center")                        
div(class="row")
  div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3")
    form(id="contact-form" class="form" action="#" method="POST" role="form")
      div(class="form-group")
        input(type="text" id="name" class="form-control" name="name"  placeholder="Nom" tabindex="1" required)
      div(class="form-group")
        input(id="email" type="email" class="form-control" name="email" placeholder="Email" tabindex="2" required)
      div(class="form-group")
        input(type="text" id="subject" class="form-control" name="subject" placeholder="Sujet" tabindex="3")
      div(class="form-group")
        textarea(id="message" class="form-control" rows="5" cols="50" name="message" placeholder="Message" tabindex="4" required)      
      div(class="text-center")
        button(type="submit" class="btn btn-start-order") Envoyer